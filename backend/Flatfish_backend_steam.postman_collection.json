							"const jsonData = JSON.parse(responseBody);",
							"",
							"pm.test(\"API call successfull\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Makes sure body is correct\", function () {",
							"    pm.expect(jsonData).to.have.property('currency');",
							"    pm.expect(jsonData).to.have.property('initial');",
							"    pm.expect(jsonData).to.have.property('final');",
							"    pm.expect(jsonData).to.have.property('discount_percent');",
							"});",
							"",
							"//Test for game with filterValue = 57690",
							"pm.test(\"Correct currency\", function () {",
							"    pm.expect(jsonData.currency).to.eql('EUR');",
							"});",
							"",
							"pm.test(\"Correct initial price\", function () {",
							"    pm.expect(jsonData.initial).to.eql(1499);",
							"});",
							"",
							"pm.test(\"Correct final price\", function () {",
							"    pm.expect(jsonData.final).to.eql(1499);",
							"});",
							"",
							"pm.test(\"Correct discount_percent\", function () {",
							"    pm.expect(jsonData.discount_percent).to.eql(0);",
